<!-- Put site-specific property overrides in this file. -->

<configuration>
	<!-- 设置namenode存放的路径 -->
	<property>
		<name>dfs.namenode.name.dir</name>
		<value>/home/vagrant/hadoop/data/name</value>
	</property>
	<!-- 设置datanode存放的路径 -->
	<property>
		<name>dfs.datanode.data.dir</name>
		<value>/home/vagrant/hadoop/data/data</value>
	</property>
	<!-- 设置hdfs副本数量 -->
	<property>
		<name>dfs.replication</name>
		<value>3</value>
	</property>
	<!-- 为了eclipse-hadoop-plugin的tmp的permission问题，临时加入 -->
	<property>
      <name>dfs.permissions</name>
      <value>false</value>
   </property>
	<!-- 设置namenode的http通讯地址 -->
	<property>
	  <name>dfs.http.address</name>
	  <value>0.0.0.0:50070</value>
	</property>
</configuration>
